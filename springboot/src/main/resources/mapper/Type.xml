<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.TypeMapper">

    <select id="findBySearch" resultType="com.example.springboot.entity.Type">
        select * from type
        <where>
            <if test="params != null and params.name != null and params.name != ''">
                and name like concat('%', #{ params.name }, '%')
            </if>
            <if test="params != null and params.description != null and params.description != ''">
                and description like concat('%', #{ params.description }, '%')
            </if>
        </where>
        ORDER BY COALESCE(updatetime,createtime) DESC
    </select>
</mapper>
